extends ../common/layout

block layout-content
  .main-content
    h1.page-title Add a New Project

    // ✅ Add enctype for file upload
    form(action="/project/add/submit", method="POST", enctype="multipart/form-data")
      .form-group
        label(for="name") Project Title:
        input(type="text", name="name", id="name", required)

      .form-group
        label(for="description") Description:
        textarea(name="description", id="description", rows="4", required)

      .form-group
        label(for="technology") Technologies (comma separated):
        input(type="text", name="technology", id="technology", required)

      .form-group
        label(for="link") Project Link:
        input(type="url", name="link", id="link", required)

      // ✅ File input for image
      .form-group
        label(for="image") Upload Image:
        input(type="file", name="image", id="image", accept="image/*")

      button(type="submit") Add Project

    a(href="/project/list") Go back to projects list
